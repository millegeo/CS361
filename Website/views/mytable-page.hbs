<head>
    <title>My Saved Destinations</title>
    <link rel="stylesheet" href="style.css">
    <script src='http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js'></script>  
</head>

<body>
<!-- Navigation bar at top of page -->
    <div class="navbar">
        <a href="/">Home</a>
        <a class='active' href="/mytable-page">Custom Table</a>
        <a href="/about-page">About</a>
    </div>

    <table class='my-table' id='my-table'>
        <th>Destination Name</th>
        <th>Description</th>
        <th>Delete</th>

    <!-- Display destination information in a table -->
    {{#each data}}
        <tr data-value={{this.destination_id}}>
            <td>{{this.destination_name}}</td>
            <td>{{this.destination_description}}</td>
            <td><button onClick='removeFromTable({{this.destination_id}})'>Delete</button></td>
        </tr>
    {{/each}}
    </table>
    

    <!-- Button to add information to table -->
    <div class='add-button'>
        <a href="/"><button title="Add destination to your table!" >Add More</button></a>
    </div>
    
</body>

<script src="./js/home-showtable.js"></script>